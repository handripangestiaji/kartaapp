<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
			
	<LinearLayout
	    android:orientation="vertical"
	    android:background="#fff"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >			    	    
    
	    <ImageView
			android:id="@+id/img_category"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:adjustViewBounds="true"
		    android:scaleType="fitXY"    
		    android:contentDescription="description image"
	        android:src="@drawable/pizza" />
	    
	    <LinearLayout 
	        android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
	        android:layout_marginRight="5dp"
		  	android:layout_marginLeft="5dp" >
		    
		    <TextView 
				android:id="@+id/menu_description"
		   		android:textSize="16sp"
				android:layout_width="0dip"
		 		android:layout_weight="0.8"
		        android:layout_height="match_parent"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:textColor="@color/textColor1"
		        android:text="Description in here Description in here Description in here Description in here Description in here Description in here Description in here Description in here" />
	        
	        <LinearLayout 
		        android:orientation="vertical"
				android:layout_width="0dip"
		 		android:layout_weight="0.2"
			    android:layout_height="match_parent" >
	        
		        <LinearLayout 
			        android:orientation="horizontal"
				    android:layout_gravity="right"    
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="5dp" >		            
            
	         		<TextView 
						android:id="@+id/menu_rating"
				      	android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/baseColor"
				        android:text="4.0" />
				    
				    <ImageView
				        android:layout_width="20sp"
				        android:layout_height="20sp"
				        android:layout_marginLeft="2dp"
				        android:src="@drawable/star" />
						
				</LinearLayout>				  				    
			    
	   		    <TextView 
					android:id="@+id/menu_price"
			   		android:textSize="14sp"
			   		android:layout_marginTop="15dp"
		        	android:layout_marginLeft="5dp"
				    android:gravity="right"    
			      	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textColor="@color/textColor1"
			        android:text="$15.00" />
			    	            
	       	</LinearLayout>
	        
	    </LinearLayout>
	
	    <View
			android:layout_width="match_parent"
			android:layout_marginTop="15dp"
			android:layout_marginBottom="15dp"
			android:layout_height="1dp"
			android:background="#aaa" />
	
	    <LinearLayout 
	        android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    
   		    <TextView 
				android:id="@+id/btn_view_business"
		   		android:textSize="14sp"
				android:layout_width="0dip"
		 		android:layout_weight="0.33"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="10dp"
		        android:textColor="@color/buttonTextColor"
		        android:text="VIEW BUSINESS" />
	   	    
   		    <TextView 
				android:id="@+id/btn_leave_review"
		   		android:textSize="14sp"
				android:layout_width="0dip"
		 		android:layout_weight="0.33"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="10dp"
		        android:textColor="@color/buttonTextColor"
		        android:text="LEAVE A REVIEW" />
		    
   		    <TextView 
				android:id="@+id/btn_share"
		   		android:textSize="14sp"
				android:layout_width="0dip"
		 		android:layout_weight="0.33"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="10dp"
		        android:textColor="@color/buttonTextColor"
		        android:text="SHARE" />
		    	    
	    </LinearLayout>
	    
		<View
			android:layout_width="match_parent"
			android:layout_marginTop="15dp"
			android:layout_marginBottom="15dp"
			android:layout_height="1dp"
			android:background="#aaa" />
	    
	    <LinearLayout 
	        android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    
		    <TextView 
		   		android:textSize="20sp"
		        android:layout_margin="5dp"
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/textColor1"
		        android:text="Reviews" />   	    
		        
	       	<ListView
			    android:id="@+id/list_comment"
			    android:layout_width="fill_parent" 
			    android:layout_height="match_parent" >
<!-- 			    android:layout_height="1200dp" > -->
			</ListView> 
						    			        		    	    
	    </LinearLayout>
	   
	</LinearLayout>	    
	
</ScrollView>	
