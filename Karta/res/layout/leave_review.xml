<!-- 				android:scaleType="centerCrop" -->
<!-- 		        android:contentDescription="@string/logo_desc" -->
<!-- 	            android:src="@drawable/btn_submit" />		 -->
	
   	</LinearLayout> 
	
</ScrollView>	
